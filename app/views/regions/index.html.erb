<ul>
<% @regions.each do |region| %>
<div class="row">
    <div class="col s12 m7">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= link_to region.name, region_path(region) %></span>
        </div>
        <div class="card-action">
          <ol>
                <% region.wineries.each do |winery| %>
                    <li><%= link_to winery.name, winery_path(winery) %></li>
                <% end %>
            </ol>
        </div>
      </div>
    </div>
  </div>    
<% end %>
</ul>

 