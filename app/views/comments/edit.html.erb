<h1>Edit comment:</h1>

<%= form_for (@comment) do |f| %>
    
    <%= f.label :winery %>
    <%= f.collection_select :winery_id, Winery.all, :id, :name %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.submit class: 'red darken-3 btn btn-default'  %>
<% end %>
<br>

<script>
$(document).ready(function(){
    $('select').formSelect();
  });
</script>